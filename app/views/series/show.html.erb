<div class="row">
    <div class="large-12 columns">
 
    <!-- Desktop Slider -->
 
     <ul class="breadcrumbs">
          <li><a href="/">meuseriado</a></li>
          <li><a href="/series">Séries</a></li>
          <li class="current"><a href='/series/<%= @serie.slug %>'><%= @serie.nome %></a></li>
        </ul>
          </div>
        </div>
 
   <div class="row">
   	<div class="large-4 columns">
   		<img src="<%= @serie.poster %>" alt='<%= @serie.slug %>-grande'>
   		<a href="#" class="small button large-12 success columns primeiro-botao">Adicionar as minhas séries favoritas</a> 
   		<a href="#" class="small button large-12 columns">Marcar série inteira como vista</a> 
   		<a href="#" class="small button secondary large-12 columns">Vou assistir depois</a> 
   		<a href="#" class="small button secondary large-12 columns">Escrever uma avaliação</a>
   		<h4>Elenco:</h4>
   		<ul class="lista-elenco">
   			<% @serie.personagens_imagem.each do |p| %>
   				<li><img src="<%= p.imagem %>" alt="<%= p.slug%>" class="imagem-elenco"></li>
   			<% end %>
   		</ul>
   		<a href="#" class="right">Mostrar todo o elenco >></a>
     		
   	</div>
   	<div class="large-8 columns">
   		<h1><%= @serie.nome %></h1>
   		<p class="justify"><%= @serie.sinopse%></p>

	  <div class="section-container accordion" data-section="accordion">
	  		<% @serie.temporadas_validas_ordenadas.each do |temporada| %>
	  			<section>
		  			<img src="<%= temporada.imagem%>" alt="temporada<%= temporada.temporada%>" class="imagem-temporada">
		    		<p class="title nome-temporada" data-section-title><a href="#">Temporada <%= temporada.temporada %> <span class="right">Média Geral:<%= temporada.media_geral %></span></a></p>
		    		<div class="content" data-section-content>
		    			<br>
		    			<ul class="lista-episodios">
		    				<% temporada.episodios_ordenados_exibicao.each do |episodio| %>
			      				<li>
			      					<a href="/episodios/<%= episodio.slug%>"><%= episodio.numero%> - <%= episodio.nome%></a>
			      					<span class="texto-pequeno">Exibição em <%= date(episodio.estreia)%> </span>	
			      					<div class="nota-lista-serie">
			      						<span class="left nota-label">Nota:</span>
				      					<div class="rating">
											<span>☆</span><span>☆</span><span>☆</span><span>☆</span><span>☆</span><span>☆</span><span>☆</span><span>☆</span><span>☆</span><span>☆</span>
										</div>	
									</div>
			      				</li>
		      				<% end %>
						</ul>
		    		</div>
				</section>
	    	<% end %>
		</div>
   	</div>
   </div>