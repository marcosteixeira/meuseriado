<div class="row">
    <div class="large-12 columns">
 
    <!-- Desktop Slider -->
 
     <ul class="breadcrumbs">
          <li><a href="/">meuseriado</a></li>
          <li><a href="/series">Séries</a></li>
          <li class="current"><a href='/series/<%= @serie.slug %>'><%= @serie.nome %></a></li>
        </ul>
          </div>
        </div>
 
   <div class="row">
   	<div class="large-4 columns">
   		<img src="<%= @serie.poster %>" alt='<%= @serie.slug %>-grande'>

   		<% if (user_signed_in? && current_user.viu_serie?(@serie)) %>
   			<a href='#' class="small button large-12 success columns primeiro-botao" rel="nofollow">Dar nota(Ver com o André as estrelinhas)</a>
   		<% else %>
   			<a href='/series/<%= @serie.slug%>/adicionar' class="small button large-12 success columns primeiro-botao" rel="nofollow">Adicionar as minhas séries favoritas!</a>
   		<% end%>
   		<a href='/series/<%= @serie.slug%>/marcar_toda' class="small button large-12 columns">Marcar série inteira como vista</a> 
   		<a href="#" class="small button secondary large-12 columns">Vou assistir depois</a> 
   		<a href="#" class="small button secondary large-12 columns">Escrever uma avaliação</a>
   		<h4>Elenco:</h4>
   		<ul class="lista-elenco">
   			<% @serie.personagens_imagem.limit(8).each do |p| %>
   				<li><img src="<%= p.imagem %>" alt="<%= p.slug%>" class="imagem-elenco"></li>
   			<% end %>
   		</ul>
   		<a href="#" class="right">Mostrar todo o elenco >></a>
     		
   	</div>
   	<div class="large-8 columns">
   		<h1><%= @serie.nome %></h1>
   		<p class="justify"><%= @serie.sinopse%></p>

	  <div class="section-container accordion" data-section="accordion">
			<% @serie.temporadas_validas_ordenadas.each do |temporada| %>
				<section>
					<%= listar_temporada temporada %>
				</section>
			<% end %>
			<section>
				<%= listar_temporada @serie.temporada_especial %>
			</section>
		</div>
   	</div>
   </div>