<div class="row">
    <div class="large-12 columns">
	     <ul class="breadcrumbs">
         	<li><a href="/">meuseriado</a></li>
         	<li class="current"><a href='/users/<%= @user.slug %>'><%= @user.name %></a></li>
        </ul>
    </div>
</div>


<div class="row">
	<div class="large-4 columns">

   		<img alt="<%= @user.slug %>-grande" src='<%= @user.imagem_formatada%>'>

