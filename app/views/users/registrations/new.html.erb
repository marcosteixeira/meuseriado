<div class="pagina-formulario">
  <div class="row">
    <div class="large-12 columns">
      <h2>Cadastre-se</h2>

      <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
          <%= devise_error_messages! %>

          <div><%= f.label :nome %><br />
            <%= f.text_field :name, :autofocus => true %></div>

          <div><%= f.label :email %><br />
            <%= f.email_field :email, :autofocus => true %></div>

          <div><%= f.label :senha %><br />
            <%= f.password_field :password %></div>

          <div><%= f.label :repita_a_senha %><br />
            <%= f.password_field :password_confirmation %></div>


          <div class="row lista-de-botoes">
            <div class="large-2 columns"><%= f.submit "Cadastrar", :class => 'small button large-12 columns' %></div>
            <div class="large-3 columns"><a href="/users/auth/facebook" class="small button large-12 columns Facebook-entrar">Entrar com Facebook</a></div>
            <div class="large-3 columns"><a href="/users/auth/google_oauth2" class="small button large-12 columns google-entrar">Entrar com conta google</a></div>
            <div class="large-3 columns"><a href="/users/sign_in" class="small button secondary large-12 columns">JÃ¡ tem um login? Entrar</a></div>
          </div>

          <a href="/users/password/new">Esqueceu sua senha?</a><br/>
      <% end %>

    </div>
  </div>
</div>
</div>