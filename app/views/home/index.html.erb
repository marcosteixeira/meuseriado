<div class="pagina-inicial">
  <div class="row">
    <div class="large-12 columns">
      <h2 class="titulo-mais-assistidos-da-semana">Mais assistidos da semana</h2>

      <div class="caixa-de-destaques">
        <ul class="lista-de-series-mais-assistidas">
          <li class="primeiro-lugar">
            <a href="/series/<%= @series_top.first.slug %>"><img src="<%= @series_top.first.poster %>" alt="<%= @series_top.first.slug %>"></a>

            <div class="descricao-destacando">
              <h1 class="indent"><a href="#"><%= @series_top.first.nome_exibicao %></a></h1>

              <div class="pessoas-assistiram left">
                <%= @series_top.first.visualizacoes_semanais.count %>
              </div>
              <div class="pessoas-votaram left">
                <%= @series_top.first.nota %>
              </div>
              <div class="pessoas-comentaram left">
                <%= @series_top.first.comments.count %>
              </div>
            </div>
          </li>
          <% for i in 1..3 %>
              <li class="segundo-lugar">
                <a href="/series/<%= @series_top[i].slug %>"><img src="<%= @series_top[i].poster %>" alt="<%= @series_top[i].slug %>"></a>

                <div class="descricao-destacando">
                  <h2 class="indent"><a href="#"><%= @series_top[i].nome_exibicao %></a></h2>

                  <div class="pessoas-assistiram left">
                    <%= @series_top[i].visualizacoes_semanais.count %>
                  </div>
                  <div class="pessoas-votaram left">
                    <%= @series_top[i].nota %>
                  </div>
                </div>
              </li>
          <% end %>

          <% for i in 4..@series_top.size - 1 %>
              <% if @series_top[i] %>
                  <li class="terceiro-lugar">
                    <a href="/series/<%= @series_top[i].slug %>"><img src="<%= @series_top[i].poster %>" alt="<%= @series_top[i].slug %>"></a>

                    <div class="descricao-destacando">
                      <h3 class="indent"><a href="#"><%= @series_top[i].nome_exibicao %></a></h3>

                      <div class="pessoas-assistiram left">
                        <%= @series_top[i].visualizacoes_semanais.count %>
                      </div>
                    </div>
                  </li>
              <% end %>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="large-12 columns">
      <hr>
    </div>
  </div>
  <div class="row">
    <div class="large-12 columns">
      <div class="large-4 columns">
        <h2>Batalha da semana:</h2>

        <div class="row">
          <div class="large-12 columns">
            <a href="/batalhas/<%= @batalha_ativa.slug %>">
              <div class="row outras-batalhas">
                <div class="large-5 columns">
                  <img src="<%= @batalha_ativa.desafiante.poster %>" alt="<%= @batalha_ativa.desafiante.nome_exibicao %>">
                </div>
                <div class="large-2 columns versus">
                </div>
                <div class="large-5 columns">
                  <img src="http://meuseriado.com.br/images/series/poster/71528-1.jpg" alt="">
                </div>
              </div>
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="large-12 columns">
      <hr>
    </div>
  </div>
  <div class="row">
  <%= gerando_assunto(@avaliacoes) %>
    <%= rolando_agora(@avaliacoes) %>
    <div class="large-5 columns">
      <div class="anuncio-grande right">
        <div id="fb-root"></div>
        <script>(function (d, s, id) {
            var js, fjs = d.getElementsByTagName(s)[0];
            if (d.getElementById(id)) return;
            js = d.createElement(s);
            js.id = id;
            js.src = "//connect.facebook.net/pt_BR/all.js#xfbml=1&appId=213772275466936";
            fjs.parentNode.insertBefore(js, fjs);
        }(document, 'script', 'facebook-jssdk'));</script>
        <div class="fb-like-box" data-href="http://www.facebook.com/meuseriado.com.br" data-colorscheme="light" data-show-faces="true" data-header="true" data-stream="false" data-show-border="true"></div>
      </div>
    </div>
  </div>
</div>