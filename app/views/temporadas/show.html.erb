<div class="row">
	<div class="large-12 columns">
	     <ul class="breadcrumbs">
	      <li><a href="/">meuseriado</a></li>
	      <li><a href="/series">Séries</a></li>
	      <li><a href='/series/<%=@temporada.serie.slug%>'><%=@temporada.serie.nome %></a></li>
	      <li class="current"><a href='/series/<%=@temporada.serie.slug%>/temporadas/<%=@temporada.temporada %>'>Temporada <%=@temporada.temporada %></a></li>
	    </ul>
  </div>
</div>


<script type="text/javascript">
	$(document).ready(function(){
		$('#star').raty({  });
	
	});
</script>
   <div class="row">
   	<div class="large-4 columns">
   		<img src="<%= @temporada.imagem %>" alt="<%= @temporada.serie.slug %>-grande">
		<% if (user_signed_in? && current_user.viu_temporada?(@temporada)) %>
			<a href='#' class="small button large-12 success columns primeiro-botao" rel="nofollow">Já viu(Ver com o André as estrelinhas)</a>
		<% else %>
			<a href='/temporadas/<%= @temporada.slug%>/marcar_toda' class="small button large-12 success columns primeiro-botao" rel="nofollow">Marcar temporada inteira como vista</a>
		<% end %>

   		<a href="#" class="small button secondary large-12 columns">Vou assistir depois</a> 
   		<a href="#" class="small button secondary large-12 columns">Escrever uma avaliação</a>
   		<h4>Quem viu esta temporada:</h4>
   		<ul class="quem-viu-episodio large-12">
   			<% @temporada.avaliacoes.each do |avaliacao| %>
				<li>
					<a href='/users/<%= avaliacao.user.slug %>' class="tip-user" >
						<img src='<%= avaliacao.user.imagem_formatada %>' width="60" height="60" alt='<%= avaliacao.user.name %>'>
					</a>
				</li>
			<% end %>
		</ul>
		<a href="#"><%= @temporada.avaliacoes.count %> pessoas marcaram como visto</a>

		   		<h4>Elenco:</h4>
   		<ul class="lista-elenco">
			<% @temporada.serie.personagens_imagem.limit(4).each do |p| %>
   				<li><img src="<%= p.imagem %>" alt="<%= p.slug%>" class="imagem-elenco"></li>
   			<% end %>
   		</ul>
   		<a href="#" class="right">Mostrar todo o elenco >></a>
     		
   	</div>
   	<div class="large-8 columns">
   		<hgroup class="titulo-episodio">
   			<h1>
		   		<a href="/series/<%= @temporada.serie.slug%>">
   					<small><%= @temporada.serie.nome%>:</small> 
   				</a>
   				<a href="#">
   					Temporada <%= @temporada.temporada%>
   				</a>
   			</h1>
   		</hgroup>
   		<div class="row infos-interior">
   			<div class="large-5 columns">Média geral:<div id="star" class="estrelas-pagina-interior"> </div> <span class="nota-numerica"><%= @temporada.media_geral%></span></div> <div class="large-7 columns data-lancamento-interno">Lançamento: <b><%= date @temporada.data_lancamento%></b></div>
   		</div>
   		<p class="justify"></p>

	  <div class="section-container accordion" data-section="accordion">
	  	<section class="active">
	  		<%= listar_temporada @temporada %>
	    </section>
	  	
	</div>
   	</div>
   </div>
